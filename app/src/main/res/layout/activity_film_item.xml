<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/darkBlue"
    android:id="@+id/conteinerFilms"
    tools:context=".activity.FilmItemActivity"
    >

    <ImageView
        android:id="@+id/bigImg"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:background="@drawable/big"/>
    <androidx.appcompat.widget.AppCompatImageButton
        android:id="@+id/backHomePage"
        android:layout_width="11dp"
        android:layout_height="19dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_margin="22dp"
        android:background="@drawable/back"/>

    <androidx.appcompat.widget.AppCompatImageButton
        android:id="@+id/youtubePlay"
        android:layout_width="48dp"
        android:layout_height="48dp"
        app:layout_goneMarginTop="64dp"
        android:layout_marginBottom="64dp"
        android:layout_marginStart="156dp"
        android:layout_marginEnd="156dp"
        android:layout_marginTop="60dp"
        android:background="@drawable/play"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>
    <androidx.appcompat.widget.AppCompatImageButton
        android:id="@+id/saveDataInSavedFragment"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:background="@drawable/hearth"
        app:layout_constraintTop_toBottomOf="@id/bigImg"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_margin="40dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>